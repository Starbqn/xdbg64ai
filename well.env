# Memory Debugger Configuration
# Copy this file to .env and update with your actual values

# Anthropic API key for AI Assistant functionality
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_secret_key_here

# Optional: Flask secret key for session management
# Generate a random key by running: python -c "import secrets; print(secrets.token_hex(16))"
SESSION_SECRET=your_secret_key_here

# Optional: Debug mode (set to False in production)
DEBUG=True

# Optional: Port for the web server (default: 5000)
PORT=5000

# Optional: Google Gemini API key for additional AI capabilities
GEMINI_API_KEY=your_gemini_api_key_here